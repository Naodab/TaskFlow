<header data-adjust-navbar-padding-target="navbar">
    <div class="header__center">
        <ul class="ul--row">
            <li><%= nav_link_to "Home", root_url %></li>
            <li><%= nav_link_to "About", about_static_pages_url %></li>
        </ul>
    </div>
    <div class="header__left">
        <%= render "layouts/logo", large: true %>
    </div>
    <div class="header__right">
        <ul class="ul--row">
            <% if logged_in? %>
                <li>
                    <%= link_to "Log out", logout_path, method: :delete, class: "btn btn--border btn--hover--default" %>
                </li>
            <% else %>
                <li>
                    <%= link_to "Sign in", login_path, class: "btn btn--border btn--hover--default" %>
                </li>
                <li>
                    <%= link_to "Get started", signup_path, class: "btn btn--gradient btn--hover--default" %>
                </li>
            <% end %>
        </ul>
    </div>
</header>
