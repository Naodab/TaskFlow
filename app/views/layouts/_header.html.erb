<header data-adjust-navbar-padding-target="navbar">
    <div class="header__center">
        <ul class="ul--row">
            <li><%= nav_link_to "Home", root_url %></li>
            <li><%= nav_link_to "About", about_static_pages_url %></li>
        </ul>
    </div>
    <div class="header__left">
        <%= render "layouts/logo", large: true %>
    </div>
    <div class="header__right">
        <ul class="ul--row">
            <% if logged_in? %>
                <li data-controller="dropdown-menu">
                    <div class="btn btn--border btn--hover--default has-dropdown" data-dropdown-menu-target="menu">
                        Account
                        <i class="fa-solid fa-angle-down expand" data-dropdown-menu-target="expand"></i>
                        <i class="fa-solid fa-angle-up shrink hidden" data-dropdown-menu-target="shrink"></i>

                        <ul class="dropdown container hidden" data-dropdown-menu-target="dropdown">
                            <li class="dropdown-item"><%= link_to "Profile", '#' %></li>
                            <li class="dropdown-item"><%= link_to "Settings", '#' %></li>
                            <li class="dropdown-item">
                                <%= link_to "Log out", logout_path, method: :delete %>
                            </li>
                        </ul>
                    </div>
                </li>
            <% else %>
                <li>
                    <%= link_to "Sign in", login_path, class: "btn btn--border btn--hover--default" %>
                </li>
                <li>
                    <%= link_to "Get started", signup_path, class: "btn btn--gradient btn--hover--default" %>
                </li>
            <% end %>
        </ul>
    </div>
</header>
